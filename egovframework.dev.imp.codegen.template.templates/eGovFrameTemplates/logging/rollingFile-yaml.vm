Configuration:
  Appenders:
    RollingFile:
      name: ${txtAppenderName}
      fileName: "${txtLogFileName}"
      filePattern: "${txtLogFileNamePattern}"
      PatternLayout:
        pattern: "${txtConversionPattern}"
      Policies:
        SizeBasedTriggeringPolicy:
          size: ${txtMaxFileSize}
      DefaultRolloverStrategy:
        max: ${txtMaxIndex}
  Loggers:
    Logger:
      - name: "egovframework"
        level: DEBUG
        additivity: false
        appenderRef:
          - ref: ${txtAppenderName}
      - name: "org.egovframe"
        level: DEBUG
        additivity: false
        appenderRef:
          - ref: ${txtAppenderName}
      - name: "org.springframework"
        level: DEBUG
        additivity: false
        appenderRef:
          - ref: ${txtAppenderName}

    Root:
      level: INFO
      appenderRef:
        - ref: ${txtAppenderName}
